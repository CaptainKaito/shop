<h1 class="centered-title">Products</h1>
<%= link_to "New product", new_product_path  %>
<%= link_to "Login", new_session_path unless authenticated? %>

<%= link_to "New product", new_product_path, class: "button primary" %>

<div id="products">
  <% @products.each do |product| %>
    <div class="product-card">
      <%= link_to product.name, product, class: "button secondary" %>
    </div>
  <% end %>
</div>

<style>
  /* Định dạng nền cho toàn bộ trang */
  body {
    background-color: #fff9e6; /* Màu vàng nhạt */
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  /* Định dạng tiêu đề */
  .centered-title {
    text-align: center;
    color: #ffffff;
    background-color: #4CAF50;
    padding: 10px;
    border-radius: 5px;
  }

  /* Định dạng chung cho nút */
  .button {
    display: inline-block;
    text-align: center;
    padding: 10px 20px;
    text-decoration: none;
    border: 2px solid transparent;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    margin: 5px;
    transition: background-color 0.3s, border-color 0.3s, color 0.3s;
    cursor: pointer;
  }

  .button:hover {
    opacity: 0.9;
  }

  /* Định dạng nút chính (primary) */
  .button.primary {
    background-color: #007BFF;
    color: white;
    border-color: #0056b3;
  }

  .button.primary:hover {
    background-color: #0056b3;
  }

  /* Định dạng nút phụ (secondary) */
  .button.secondary {
    background-color: #6c757d;
    color: white;
    border-color: #545b62;
  }

  .button.secondary:hover {
    background-color: #545b62;
  }

  /* Định dạng nút thành công (success) */
  .button.success {
    background-color: #28a745;
    color: white;
    border-color: #218838;
  }

  .button.success:hover {
    background-color: #218838;
  }

  /* Định dạng nút cảnh báo (warning) */
  .button.warning {
    background-color: #ffc107;
    color: black;
    border-color: #e0a800;
  }

  .button.warning:hover {
    background-color: #e0a800;
  }

  /* Định dạng nút nguy hiểm (danger) */
  .button.danger {
    background-color: #dc3545;
    color: white;
    border-color: #bd2130;
  }

  .button.danger:hover {
    background-color: #bd2130;
  }

  /* Định dạng sản phẩm */
  .product-card {
    background-color: #f9f9f9; /* Màu nền cho sản phẩm */
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    margin: 10px 0;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease-in-out, background-color 0.3s ease-in-out;
  }

  .product-card:hover {
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
    background-color: #e6f7ff; /* Đổi màu nền khi rê chuột */
  }

  #products {
    max-width: 600px;
    margin: 20px auto;
  }
</style>
